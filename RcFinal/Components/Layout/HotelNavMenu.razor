@implements IDisposable
@inject NavigationManager NavigationManager

<style>
    /* Show dropdown menu on hover */
    .nav-item.dropdown:hover > .dropdown-menu {
        display: block;
        margin-top: 0; /* Adjust spacing if needed */
    }
</style>

<!-- Header Section Begin -->
<header class="header-section">
    <div class="menu-item">
        <div class="container">
            <div class="row">
                <div class="col-lg-2">
                    <div class="logo">
                        <a href="">
                            <img src="img/logo.png" alt="">
                        </a>
                    </div>
                </div>
                <div class="col-lg-10">
                    <div class="nav-menu">
                        <nav class="mainmenu">
                            <ul>
                                <li class="nav-item">
                                    <NavLink href="" Match="NavLinkMatch.Prefix">
                                        Home
                                    </NavLink>
                                </li>
                                <li>
                                    <NavLink href="about-us" Match="NavLinkMatch.Prefix">
                                        About Us
                                    </NavLink>
                                </li>
                                <li>
                                    <NavLink href="news" Match="NavLinkMatch.Prefix">
                                        News
                                    </NavLink>
                                </li>
                                <li>
                                    <NavLink href="contact" Match="NavLinkMatch.Prefix">
                                        Contact
                                    </NavLink>
                                </li>
                                <li>
                                    <NavLink class="bk-btn me-3" href="book">
                                        Book
                                    </NavLink>
                                </li>
                                <AuthorizeView>
                                    <Authorized>
                                        <li class="nav-item dropdown">
                                            <a class="nav-link dropdown-toggle" href="#" id="userDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                                @context.User.Identity?.Name
                                            </a>
                                            <div class="dropdown-menu" aria-labelledby="userDropdown">
                                                <NavLink class="btn btn-link dropdown-item" href="mybookings">My Bookings</NavLink>
                                                <NavLink class="btn btn-link dropdown-item" href="Account/Manage">Dashboard</NavLink>
                                                <div class="dropdown-divider"></div>
                                                <form action="Account/Logout" method="post" class="px-3">
                                                    <AntiforgeryToken />
                                                    <input type="hidden" name="ReturnUrl" value="@currentUrl" />
                                                    <button type="submit" class="btn btn-link dropdown-item">Logout</button>
                                                </form>
                                            </div>
                                        </li>
                                    </Authorized>
                                    <NotAuthorized>
                                        <li>
                                            <NavLink class="btn" href="Account/Register">
                                                Register
                                            </NavLink>
                                        </li>
                                        <li>
                                            <NavLink class="btn" href="Account/Login">
                                                Login
                                            </NavLink>
                                        </li>
                                    </NotAuthorized>
                                </AuthorizeView>
                            </ul>
                        </nav>
                    </div>
                </div>
            </div>
        </div>
    </div>
</header>
<!-- Header End -->

@code {
    private string? currentUrl;

    protected override void OnInitialized()
    {
        currentUrl = NavigationManager.ToBaseRelativePath(NavigationManager.Uri);
        NavigationManager.LocationChanged += OnLocationChanged;
    }

    private void OnLocationChanged(object? sender, LocationChangedEventArgs e)
    {
        currentUrl = NavigationManager.ToBaseRelativePath(e.Location);
        StateHasChanged();
    }

    public void Dispose()
    {
        NavigationManager.LocationChanged -= OnLocationChanged;
    }
}